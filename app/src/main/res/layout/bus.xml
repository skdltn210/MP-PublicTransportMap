<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="#EAEAEA"
        app:cardCornerRadius="10dp"
        app:cardElevation="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="5dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textViewRtNm"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="rtNm"
                    android:textColor="#000000"
                    android:textSize="9sp"
                    android:maxLines="1"
                    android:layout_marginBottom="3dp" />

                <TextView
                    android:id="@+id/textViewRtTyoe"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="rtType"
                    android:textColor="#000000"
                    android:textSize="9sp"
                    android:maxLines="1"
                    android:layout_marginBottom="3dp" />

                <TextView
                    android:id="@+id/textViewTerm"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Term"
                    android:textColor="#000000"
                    android:textSize="9sp"
                    android:maxLines="1"
                    android:layout_marginBottom="3dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textViewSectNm"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="SectNm"
                    android:textColor="#000000"
                    android:textSize="9sp"
                    android:maxLines="1"
                    android:layout_marginBottom="3dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textViewArrMsg1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="5"
                    android:text="ArrMsg1"
                    android:textColor="#000000"
                    android:textSize="9sp"
                    android:maxLines="1"
                    android:layout_marginBottom="3dp" />

                <TextView
                    android:id="@+id/textViewBusType1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2.5"
                    android:text="BusType1"
                    android:textColor="#000000"
                    android:textSize="9sp"
                    android:maxLines="1"
                    android:layout_marginBottom="3dp" />

                <TextView
                    android:id="@+id/textViewIsLast1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2.5"
                    android:text="IsLast1"
                    android:textColor="#000000"
                    android:textSize="9sp"
                    android:maxLines="1"
                    android:layout_marginBottom="3dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textViewArrMsg2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="5"
                    android:text="ArrMsg2"
                    android:textColor="#000000"
                    android:textSize="9sp"
                    android:maxLines="1"
                    android:layout_marginBottom="3dp" />

                <TextView
                    android:id="@+id/textViewBusType2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2.5"
                    android:text="BusType2"
                    android:textColor="#000000"
                    android:textSize="9sp"
                    android:maxLines="1"
                    android:layout_marginBottom="3dp" />

                <TextView
                    android:id="@+id/textViewIsLast2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2.5"
                    android:text="IsLast2"
                    android:textColor="#000000"
                    android:textSize="9sp"
                    android:maxLines="1"
                    android:layout_marginBottom="3dp" />

            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>
