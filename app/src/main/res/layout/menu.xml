<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/backImageView"
        android:layout_width="44dp"
        android:layout_height="41dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="0dp"
        android:contentDescription="뒤로가기"
        android:src="@drawable/back" />

    <TextView
        android:id="@+id/textViewSelectTransport"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/backImageView"
        android:layout_toEndOf="@id/backImageView"
        android:layout_marginStart="25dp"
        android:layout_marginTop="10dp"
        android:text="대중교통을 선택하세요"
        android:textSize="24sp"
        android:textStyle="bold"/>

    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/textViewSelectTransport"
        android:orientation="vertical">

        <ImageButton
            android:id="@+id/buttonBus"
            android:layout_marginBottom="10dp"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:src="@drawable/bus"
            android:scaleType="centerCrop"
            android:background="@null"
            android:textSize="18sp" />

        <ImageButton
            android:id="@+id/buttonSubway"
            android:layout_marginBottom="10dp"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:src="@drawable/metro"
            android:scaleType="centerCrop"
            android:background="@null"
            android:textSize="18sp" />

        <ImageButton
            android:id="@+id/buttonBike"
            android:layout_marginBottom="10dp"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:src="@drawable/bike"
            android:scaleType="centerCrop"
            android:background="@null"
            android:textSize="18sp" />

    </LinearLayout>

</RelativeLayout>
